{
  "compilerOptions": {
    "moduleResolution": "Node",
    "rootDir": "src",
    "module": "esnext",
    "outDir": "dist",
    "target": "ES2020",
    "lib": ["ES2020"],
    "strict": true,
    "sourceMap": true,
    "declaration": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true
  }
}
